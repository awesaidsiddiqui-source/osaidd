        function idiotClick() {
            document.getElementById("message").innerText = "He loves Buba ❤️";
        }

        function bubaClick() {
            document.getElementById("message").innerText = "Buba loves Idiot ❤️";
        }

        function playMusic() {
            document.getElementById("loveMusic").play();
        }

        function pauseMusic() {
            document.getElementById("loveMusic").pause();
